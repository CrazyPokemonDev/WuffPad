<Window x:Class="XML_Editor_WuffPad.CommentWarningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XML_Editor_WuffPad"
        mc:Ignorable="d"
        Title="CommentWarningDialog" Height="250" Width="350" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Warning!&#xD;&#xA;If you use this application to edit your files,&#xD;&#xA;all comments below the language tag will be lost!&#xD;&#xA;(most of them will be in the descriptions&#xD;&#xA;in this app)" Margin="11,16,10.6,65.4" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="checkBoxDontShowAgain" Content="Do not show again" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom"/>
        <Button x:Name="buttonOk" Content="OK" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="buttonOk_Click"/>

    </Grid>
</Window>
